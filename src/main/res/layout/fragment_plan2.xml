<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.waseem.hmeal.plan2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_margin="10dp"
            android:background="#fff"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">


            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:id="@+id/imageView2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/threemont" />

            <TextView
                android:layout_gravity="center"
                android:textSize="20dp"
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Three months Plan" />

        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:background="#fff"
            android:id="@+id/sixmont"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">


            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/sixmonthes" />

            <TextView
                android:layout_gravity="center"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="six months Plan" />

        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:background="#fff"
            android:id="@+id/six"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">


            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/plusyear" />

            <TextView
                android:layout_gravity="center"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="one  year  Plan" />

        </LinearLayout>
    </LinearLayout>


</FrameLayout>
